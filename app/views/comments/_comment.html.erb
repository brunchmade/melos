<li class="onDeckSong flex items-center mb2" data-user-id="<%= comment.user.id %>">
  <img src="<%= comment.responses['artwork_url'] %>" class="onDeckAlbumArt">
  <div class="flex-auto ml1">
  <h3 class="m0"><%= comment.responses['title'] %></h3>
  <p class="m0 h6 opacity"><%= comment.user.name %></p>
  </div>
  <a class="block flex-none remove">&times;</a>
  <script>
    $('.nowPlaying h1').text('<%= comment.responses['title'].to_s %>');
    $('.nowPlaying h2').text('<%= comment.responses['user']['username'].to_s %>');
    $('.nowPlayingAlbumArt').attr('src','<%= comment.responses['artwork_url'].to_s.gsub('large','t500x500') %>');
    player.pause();
    player.setSrc('<%= (comment.responses['stream_url'].to_s + '?client_id=b59d1f4b68bbc8f2b0064188f210117d').to_s %>');
    player.load();
    player.play();
  </script>
  </li>
