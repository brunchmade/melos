gem 'pg'
gem 'redis'
gem 'soundcloud'
gem 'puma'
gem 'pusher'
gem 'sidekiq'

gem 'rack-cors', :require => 'rack/cors'

gem 'autoprefixer-rails'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', github: "rails/coffee-rails"
gem 'jquery-rails'
gem 'turbolinks', github: "rails/turbolinks"
